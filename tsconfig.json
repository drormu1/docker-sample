{
  "compilerOptions": {
    "target": "es6",                      // Use the latest ECMAScript features
    "module": "commonjs",                      // Use ES Modules
    "moduleResolution": "node",              // Resolve modules in Node.js style
    "esModuleInterop": true,                 // Enable compatibility for CommonJS modules
    "outDir": "./dist",                      // Output compiled JS files to 'dist' folder
    "strict": true,                          // Enable strict type-checking options
    "skipLibCheck": true,  
    "experimentalDecorators": true,  // Enable decorators
    "emitDecoratorMetadata": true,    // Emit metadata for decorators                  // Skip checking libraries' types
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing of file names
    "resolveJsonModule": true,               // Allow importing JSON files
     "baseUrl": "./", 
    "paths": {
      "*": ["node_modules/*"]         
    }
  },
  "include": ["src/**/*"],                   // Include all files in 'src' directory
        // Exclude 'node_modules' from compilation
}
